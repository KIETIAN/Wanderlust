<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">


<h3>Edit your Listing</h3>

<form method="POST" action="/listings/<%= listing._id %>?_method=PUT">

    <!-- Title -->
    <div class="mb-3">
        <label for="title" class="form-label">Title</label><br>
        <input 
            name="listing[title]" 
            value="<%= listing.title %>" 
            type="text"
            class="form-control"
        />
    </div>

    <!-- Description -->
    <div class="mb-3">
        <label for="description" class="form-label">Description</label><br>
        <textarea
            name="listing[description]"
            class="form-control"
            rows="4"
        ><%= listing.description %></textarea>
    </div>

    <!-- Image -->
    <div class="mb-3">
        <label for="image" class="form-label">Image Link</label><br>
        <input 
            name="listing[image]" 
            value="<%= listing.image %>" 
            type="text"
            class="form-control"
        />
    </div>

    <div class="row">
    <!-- Price -->
    <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label><br>
        <input 
            name="listing[price]" 
            value="<%= listing.price %>" 
            type="number"
            class="form-control"
        />
    </div>

    <!-- Country -->
    <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label><br>
        <input 
            name="listing[country]" 
            value="<%= listing.country %>" 
            type="text"
            class="form-control"
        />
    </div>
    </div>

    <!-- Location -->
    <div class="mb-3">
        <label for="location" class="form-label">Location</label><br>
        <input 
            name="listing[location]" 
            value="<%= listing.location %>" 
            type="text"
            class="form-control"
        />
    </div>

    <button class="btn btn-dark edit-btn mt-3">Edit</button>

</form>
    </div>
</div>
